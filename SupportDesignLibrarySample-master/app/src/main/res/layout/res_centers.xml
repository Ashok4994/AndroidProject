<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#B2EBF2">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:background="@drawable/bg_register"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_register"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="6dp"

                    android:text="Name Of Center"
                    android:textIsSelectable="false"
                    android:textColor="#175106"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_register"
                    android:gravity="center"
                    android:padding="6dp"

                    android:textColor="#175106"
                    android:textSize="30dp"
                    android:text=" Area Of Research" />

            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_register"
                    android:gravity="center"
                    android:textColor="#7B1FA2"
                    android:padding="6dp"
                    android:textSize="20dp"
                    android:text="Disaster Mitigation Studies Centre" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_register"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textColor="#7B1FA2"

                    android:text=" Public Administration response to Natural Disaster" />

            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textColor="#7B1FA2"
                    android:background="@drawable/bg_register"
                    android:textSize="20dp"
                    android:text="Centre for Womens Studies" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_register"
                    android:textSize="20dp"
                    android:textColor="#7B1FA2"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="Women&apos;s Studies" />

            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_register"
                    android:textSize="20dp"
                    android:padding="6dp"
                    android:textColor="#7B1FA2"
                    android:text="Centre for Scientific Socialism" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_register"
                    android:textSize="20dp"
                    android:textColor="#7B1FA2"
                    android:padding="6dp"
                    android:text=" Research in State and Society with Maximum Orientation" />

            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_register"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textColor="#7B1FA2"
                    android:text="Chair Mahayana Buddhist Studies" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#7B1FA2"
                    android:padding="6dp"
                    android:background="@drawable/bg_register"
                    android:textSize="20dp"
                    android:text="Schools of Mahayana Buddhism in Contemporary Context" />

            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:textColor="#7B1FA2"
                    android:gravity="center"
                    android:background="@drawable/bg_register"
                    android:textSize="20dp"
                    android:padding="6dp"
                    android:text="Prof. K.S. Murthi Centre for the study of \nAfro-Asian Philosophies" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_register"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textColor="#7B1FA2"
                    android:padding="6dp"
                    android:text="Afro Asian Philosophies, with special emphasize on\n India , Chinese and African Philosophies." />

            </TableRow>
            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_register"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textColor="#7B1FA2"
                    android:text="Ambedkar Research Centre for \nSocial Policy and Social Action" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7B1FA2"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_register"
                    android:textSize="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="6dp"

                    android:text=" Research in Social Policy/Problems in the \nlight of Dr. Ambedkar&apos;s Vision" />

            </TableRow>
        </TableLayout>


    </HorizontalScrollView>

</LinearLayout>
